<Window x:Class="WPF_FILIPPOV_KR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_FILIPPOV_KR"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800" Icon="Pic/1530902289_3.jpg" Background="AntiqueWhite">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="81"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Image Source="Pic/1530902289_3.jpg" Width="50"/>
            <TextBlock Text="Авторазация" Style="{StaticResource Title}"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Height="226" Width="310" Grid.Row="1">
            <Label Content="Введите логин" />
            <TextBox Text="" x:Name="txbLogin"/>
            <Label Content="Введите пароль" />
            <PasswordBox x:Name="psbPassword"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnIn" Content="Войти" Click="btnIn_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
